[BuildOptions]
  MSFT:*_*_*_CC_FLAGS = /D UNICODE /I"$(WORKSPACE)/BloodHorn/boot/freetype/include" /D FT2_BUILD_LIBRARY /D FT_CONFIG_OPTION_SYSTEM_ZLIB=0 /D FT_CONFIG_OPTION_USE_ZLIB=0 /D FT_CONFIG_OPTION_USE_BZIP2=0 /D FT_CONFIG_OPTION_USE_PNG=0 /D FT_CONFIG_OPTION_USE_HARFBUZZER=0 /D FT_CONFIG_OPTION_MAC_FONTS=0 /D FT_CONFIG_OPTION_OLD_MAC_FONTS=0
  GCC:*_*_*_CC_FLAGS = -DUNICODE -std=c++17 -I$(WORKSPACE)/BloodHorn/boot/freetype/include -DFT2_BUILD_LIBRARY -DFT_CONFIG_OPTION_SYSTEM_ZLIB=0 -DFT_CONFIG_OPTION_USE_ZLIB=0 -DFT_CONFIG_OPTION_USE_BZIP2=0 -DFT_CONFIG_OPTION_USE_PNG=0 -DFT_CONFIG_OPTION_USE_HARFBUZZER=0 -DFT_CONFIG_OPTION_MAC_FONTS=0 -DFT_CONFIG_OPTION_OLD_MAC_FONTS=0
  XCODE:*_*_*_CC_FLAGS = -DUNICODE -std=c++17 -I"$(WORKSPACE)/BloodHorn/boot/freetype/include" /D FT2_BUILD_LIBRARY /D FT_CONFIG_OPTION_SYSTEM_ZLIB=0 /D FT_CONFIG_OPTION_USE_ZLIB=0 /D FT_CONFIG_OPTION_USE_BZIP2=0 /D FT_CONFIG_OPTION_USE_PNG=0 /D FT_CONFIG_OPTION_USE_HARFBUZZER=0 /D FT_CONFIG_OPTION_MAC_FONTS=0 /D FT_CONFIG_OPTION_OLD_MAC_FONTS=0
  INTEL:*_*_*_CC_FLAGS = /D UNICODE /Qstd=c++17 /I"$(WORKSPACE)/BloodHorn/boot/freetype/include" /D FT2_BUILD_LIBRARY /D FT_CONFIG_OPTION_SYSTEM_ZLIB=0 /D FT_CONFIG_OPTION_USE_ZLIB=0 /D FT_CONFIG_OPTION_USE_BZIP2=0 /D FT_CONFIG_OPTION_USE_PNG=0 /D FT_CONFIG_OPTION_USE_HARFBUZZER=0 /D FT_CONFIG_OPTION_MAC_FONTS=0 /D FT_CONFIG_OPTION_OLD_MAC_FONTS=0
  RVCT:*_*_*_CC_FLAGS = -DUNICODE --cpp11 -I"$(WORKSPACE)/BloodHorn/boot/freetype/include" /D FT2_BUILD_LIBRARY /D FT_CONFIG_OPTION_SYSTEM_ZLIB=0 /D FT_CONFIG_OPTION_USE_ZLIB=0 /D FT_CONFIG_OPTION_USE_BZIP2=0 /D FT_CONFIG_OPTION_USE_PNG=0 /D FT_CONFIG_OPTION_USE_HARFBUZZER=0 /D FT_CONFIG_OPTION_MAC_FONTS=0 /D FT_CONFIG_OPTION_OLD_MAC_FONTS=0

